{
  "name": "gre-color",
  "version": "0.0.0-development",
  "description": "Color utilities",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage  --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "istanbul cover -x **/*Spec.js --include-all-sources jasmine-node src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lamtranweb/gre-color.git"
  },
  "author": "Lam Tran <lamtran@gmail.com> (http://lamtran.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lamtranweb/gre-color/issues"
  },
  "homepage": "https://github.com/lamtranweb/gre-color#readme",
  "dependencies": {
    "parse-color": "1.0.0"
  },
  "devDependencies": {
    "codecov.io": "0.1.6",
    "commitizen": "2.9.3",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "jasmine-node": "1.14.5",
    "semantic-release": "^6.3.2"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
